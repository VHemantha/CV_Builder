# ============================================
# CV Builder - LOCAL DEVELOPMENT
# ============================================
# This is a pre-configured .env for local development
# Copy this to .env and add your Google OAuth credentials

# --------------------------------------------
# Core Application Settings
# --------------------------------------------
FLASK_ENV=development
FLASK_APP=app:create_app
SECRET_KEY=dev-secret-key-for-local-development-only
APP_BASE_URL=http://localhost:5000

# --------------------------------------------
# Database Configuration (Docker)
# --------------------------------------------
DATABASE_URL=postgresql://cvbuilder:devpassword@db:5432/cvbuilder

# --------------------------------------------
# Redis Configuration (Docker)
# --------------------------------------------
REDIS_URL=redis://redis:6379/0

# --------------------------------------------
# Google OAuth (YOU MUST FILL THIS IN!)
# --------------------------------------------
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Redirect URI: http://localhost:5000/auth/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CRITICAL: Set to 1 for local development over HTTP
OAUTHLIB_INSECURE_TRANSPORT=1

# --------------------------------------------
# Feature Flags & Limits
# --------------------------------------------
MAX_CVS_PER_USER=10
DOWNLOAD_RATE_LIMIT=5/hour
AI_ASSIST_ENABLED=false

# --------------------------------------------
# Security
# --------------------------------------------
IP_HASH_SALT=local-dev-salt

# --------------------------------------------
# Development Tools
# --------------------------------------------
DEBUG_TB_ENABLED=false
SQLALCHEMY_ECHO=false
