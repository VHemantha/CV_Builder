# ============================================
# CV Builder - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# --------------------------------------------
# Core Application Settings
# --------------------------------------------
FLASK_ENV=development
FLASK_APP=app:create_app
SECRET_KEY=change-me-to-a-256-bit-random-string-use-secrets-token-hex-32
APP_BASE_URL=http://localhost:5000

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# Development (use docker-compose postgres)
DATABASE_URL=postgresql://cvbuilder:devpassword@db:5432/cvbuilder

# Production (Render will auto-populate this)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# --------------------------------------------
# Redis Configuration (Rate Limiting & Caching)
# --------------------------------------------
# Development (use docker-compose redis)
REDIS_URL=redis://redis:6379/0

# Production (Render will auto-populate this)
# REDIS_URL=redis://host:6379/0

# --------------------------------------------
# Google OAuth 2.0
# --------------------------------------------
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CRITICAL: Set to 0 (or remove) in production!
# Only set to 1 for local development over HTTP
OAUTHLIB_INSECURE_TRANSPORT=1

# --------------------------------------------
# Feature Flags & Limits
# --------------------------------------------
MAX_CVS_PER_USER=10
DOWNLOAD_RATE_LIMIT=5/hour
AI_ASSIST_ENABLED=false
AI_CALLS_PER_DAY=10

# --------------------------------------------
# AI Writing Assistant (Optional)
# --------------------------------------------
# Only needed if AI_ASSIST_ENABLED=true
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# --------------------------------------------
# Security & Privacy
# --------------------------------------------
# Salt for hashing IPs in download logs (generate random string)
IP_HASH_SALT=change-me-to-random-string-use-secrets-token-hex-16

# --------------------------------------------
# Monitoring & Error Tracking (Optional)
# --------------------------------------------
# Get DSN from: https://sentry.io
SENTRY_DSN=

# --------------------------------------------
# Email Configuration (Future Phase)
# --------------------------------------------
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_DEFAULT_SENDER=noreply@cvbuilder.com

# --------------------------------------------
# Development Tools
# --------------------------------------------
# Enable Flask Debug Toolbar (dev only)
DEBUG_TB_ENABLED=false

# SQL query logging
SQLALCHEMY_ECHO=false
